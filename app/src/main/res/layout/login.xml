<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fonfo_champions"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63">

        <TextView
            android:id="@+id/textLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/anonymous_pro_bold"
            android:text="LOGIN"
            android:textColor="#011369"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/anonymous_pro_bold"
            android:gravity="start|top"
            android:hint="Nombre"
            android:inputType="textMultiLine"
            android:textColorHint="#011369"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/anonymous_pro_bold"
            android:gravity="start|top"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#011369"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#011369"
            android:fontFamily="@font/anonymous_pro_bold"
            android:onClick="entrar"
            android:text="Entrar"
            android:textColor="@color/white" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btnGoogle"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="604dp"
        android:layout_marginEnd="106dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fifa_png11" />

</androidx.constraintlayout.widget.ConstraintLayout>